<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mems" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryPink</item>
        <item name="colorOnPrimary">@color/black_87percent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryPink</item>
        <item name="colorSecondary">@color/colorSecondaryPink</item>
        <item name="colorOnSecondary">@color/black_54percent</item>
        <item name="colorOnSurface">@color/black_87percent</item>
        <item name="colorSurface">@color/colorPrimaryBrightPink</item>
        <item name="colorControlHighlight">@color/black_25percent</item>
        <item name="colorControlActivated">@color/colorSecondaryPink</item>
        <item name="colorBackgroundFloating">@color/colorPrimaryBrightPink</item>
        <item name="colorSwitchThumbNormal">@color/colorThumbNormalPink</item>
        <item name="android:textColor">@color/black_87percent</item>
        <item name="android:textColorPrimary">@color/black_87percent</item>
        <item name="android:textColorSecondary">@color/black_54percent</item>
        <item name="android:itemBackground">@color/colorPrimaryBrightPink</item>
        <item name="android:textColorHint">@color/black_54percent</item>
        <item name="android:listDivider">@color/black_12percent</item>
    </style>

    <style name="AlertDialog.Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>