<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="BaseAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:navigationBarColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    </style>

    <style name="Theme.Mems" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryPink</item>
        <item name="colorOnPrimary">@color/black_87percent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryPink</item>
        <item name="colorSecondary">@color/colorSecondaryPink</item>
        <item name="colorOnSecondary">@color/black_54percent</item>
        <item name="colorOnSurface">@color/black_87percent</item>
        <item name="colorSurface">@color/colorPrimaryBrightPink</item>
        <item name="colorControlHighlight">@color/black_25percent</item>
        <item name="colorControlActivated">@color/colorSecondaryPink</item>
        <item name="colorBackgroundFloating">@color/colorPrimaryBrightPink</item>
        <item name="colorSwitchThumbNormal">@color/colorThumbNormalPink</item>
        <item name="android:textColor">@color/black_87percent</item>
        <item name="android:textColorPrimary">@color/black_87percent</item>
        <item name="android:textColorSecondary">@color/black_54percent</item>
        <item name="android:itemBackground">@color/colorPrimaryBrightPink</item>
        <item name="android:textColorHint">@color/black_54percent</item>
        <item name="android:listDivider">@color/black_12percent</item>
    </style>

    <style name="Theme.Gray" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryGray</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryGray</item>
        <item name="colorSecondary">@color/colorSecondaryGray</item>
        <item name="colorOnSecondary">@color/white_70percent</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSurface">@color/colorPrimaryBrightGray</item>
        <item name="colorControlHighlight">@color/white_25percent</item>
        <item name="colorControlActivated">@color/colorSecondaryGray</item>
        <item name="colorBackgroundFloating">@color/colorPrimaryGray</item>
        <item name="colorSwitchThumbNormal">@color/colorThumbNormalGray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white_70percent</item>
        <item name="android:itemBackground">@color/colorPrimaryBrightGray</item>
        <item name="android:textColorHint">@color/white_70percent</item>
        <item name="android:listDivider">@color/white_12percent</item>
    </style>

    <style name="RomanticTextStyle">
        <item name="android:fontFamily">@font/amatic_sc</item>
        <item name="fontFamily">@font/amatic_sc</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AlertDialog.Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">?attr/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/splashscreen</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:navigationBarColor">@color/colorPrimaryGray</item>
    </style>
</resources>